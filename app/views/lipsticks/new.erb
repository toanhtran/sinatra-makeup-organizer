<div class="container">
  <h3 class="thin"> Add A New Lipstick</h3>
  <form action="/lipsticks" method="POST">
    <label>Lipstick Shade</label>
    <input type="text" name="shade">

    <label>Lipstick Brand</label>
    <input type="text" name="brand">

    <label>Select the Makeup Bag that this item belongs</label><br><br><br>
    <select name="makeupbag_id">
      <% @bags.each do |bag| %>
        <ul>
          <%= bag.name %> <br>
          <a href="/bags/<%= bag.id %>/edit">Edit Bag</a>
        </ul>

      <% end %>
    </select>




